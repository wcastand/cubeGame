@import "kouto-swiss"

normalize()

body
  padding 0
  margin 0
  width 100%
  height 100%
  font-family Helvetica, sans-serif;
  font-size 14px
  font-weight normal
  background #fff
  #world
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    padding 0
    margin 0
    width 100%
    height 100%
    z-index 1
  #play
    position absolute
    bottom 31px
    left 110px
    width 30px
    height 30px
    z-index 10
    text-decoration none
    color #0C1117
    font-size 2em
    transition: all .3s ease-out
    &:hover
      color #F03727
